<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <div class="jumbotron text-center">
        <h1>Latest Covid-19 Statistics</h1>
    </div>

    <div class="container">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>Country</th>
                <th>Province</th>
                <th>Population</th>
                <th>Confirmed Cases</th>
                <th>Deaths</th>
                <th>Recovered</th>
            </tr>

            <tr>
                <td> World </td>
                <td></td>
                <td></td>
                <td> <%= data.latest.confirmed %> </td>
                <td> <%= data.latest.deaths %> </td>
                <td> <%= data.latest.recovered %> </td>
            </tr>

            <% for (var i = 0; i < data.locations.length; i++) { %>
            <tr>
                <td> <%= data.locations[i].country %> </td>
                <td> <%= data.locations[i].province %> </td>
                <td> <%= data.locations[i].country_population %> </td>
                <td> <%= data.locations[i].latest.confirmed %> </td>
                <td> <%= data.locations[i].latest.deaths %> </td>
                <td> <%= data.locations[i].latest.recovered %> </td>
            </tr>
            <% } %>
        </table>
    </div>
</body>

</html>